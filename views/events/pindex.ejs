<%include ../partials/header%>

<div class="container">
	<h1 class="h1b my-4"><strong>Past Events & Workshops</strong></h1>
	<div class="events-gallery">
		<div class="row">
			<% if (events && events.length > 0) {
				events.forEach((events) => {%>
				<div class="card m-4" style="width: 24rem;">
					<img src="<%= events.image %>" class="card-img-top " alt="...">
					<div class="d-flex card-date card-img-overlay w-25">
						<p class="bodycopyb text-center card-text"><%= events.shortDate %></p>
					</div>
					<div class="d-flex flex-column card-body mx-auto card-img-overlay">
						<h3 class="h3o card-text mx-auto text-center"><%= events.name %></h3>
						<p class="bodycopyb card-text text-center"><%= events.excerpt %></p>
						<p class="bodycopyb card-text text-center"><a href="/<%= events._id %>">see more</a></p>
					</div>
				</div>
			<% })} else { %>
			<p class="h3b">
				 There is no upcoming events. Please check again soon!
			</p>
			<% }; %>
		</div>
	</div>
</div>


<!-- More info -->

<div class="container">
	<div class="d-flex flex-column align-items-center">
		<h1 class="h1b"><strong>More Info</strong></h1>
		<div class="d-flex flex-row p-4" id="more-info-box">

			<div class="d-flex flex-column w-40 justify-content-between">
				<h3 class="h3w m-2 mb-4">There's more events hosted by our Big House Partners!</h3>
				<h3 class="h3w m-2 mt-4">See some of our upcoming events!</h3>
				
			</div>
			<div class="d-flex flex-column w-20 justify-content-between">
			</div>
			<div class="d-flex flex-column w-40 justify-content-between">
				<a href="https://bighouse.org.uk/events" class="btn btn-primary h2w m-2">Partner Events</a>
				<a href="/events" class="btn btn-secondary h2w m-2">Upcoming Events</a>
			</div>

	</div>
</div>
</div>

<%include ../partials/footer%>