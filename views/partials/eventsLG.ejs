<div class="container">
	<a href="/events" class="btn btn-primary my-4">Events & Workshops</a>
	<!-- Large View Port -->
	<div class="largeViewport">
	<div class="d-flex" id="events-tab">
		<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
			<div class="carousel-inner pr-4">
				
				<div class="carousel-item active">
					
					
					
					
					
						<div class="d-flex">
								<% if (events && events.length > 0) {
									for (var i = 0; i < 3; i++) { %>
										<div class="card" style="width: 33%;">
											<img src="<%= events[i].image %>" class="card-img-top " alt="...">
											<div class="d-flex card-date card-img-overlay w-25">
												<p class="bodycopyb text-center card-text"> <%= events[i].shortDate %></p>
											</div>
											<div class="d-flex flex-column card-body mx-auto card-img-overlay">
												<h3 class="h3o card-text text-center mx-auto"><%= events[i].name %></h3>
												<p class="bodycopyb card-text text-center"><%= events[i].excerpt %></p>
												<p class="bodycopyb card-text text-center"><a href="/<%= events[i]._id %>">See More</a></p>
											</div>
										</div>
									<% } %>
						</div>
					</div>
					<% if (events && events.length > 3) { %>
						<div class="carousel-item">
							<div class="d-flex">
								<% for (var i = 3; i < events.length && 6; i++) { %>
									<div class="card" style="width:33%;">
										<img src="<%= events[i].image %>" class="card-img-top " alt="...">
										<div class="d-flex card-date card-img-overlay w-25">
											<p class="bodycopyb text-center card-text"> <%= events[i].shortDate %></p>
										</div>
										<div class="d-flex flex-column card-body mx-auto card-img-overlay">
											<h3 class="h3o card-text text-center mx-auto"><%= events[i].name %></h3>
											<p class="bodycopyb card-text text-center"><%= events[i].excerpt %></p>
											<p class="bodycopyb card-text text-center"><a href="/<%= events[i]._id %>">See More</a></p>
										</div>
									</div>
								<% } %>
							</div>
						</div>
					<% } %>
					<% if (events && events.length > 6) { %>
						<div class="carousel-item">
							<div class="d-flex">
								<% for (var i = 6; i < events.length && 9; i++) { %>
									<div class="card" style="width: 33%;">
										<img src="<%= events[i].image %>" class="card-img-top " alt="...">
										<div class="d-flex card-date card-img-overlay w-25">
											<p class="bodycopyb text-center card-text"> <%= events[i].shortDate %></p>
										</div>
										<div class="d-flex flex-column card-body mx-auto card-img-overlay">
											<h3 class="h3o card-text text-center mx-auto"><%= events[i].name %></h3>
											<p class="bodycopyb card-text text-center"><%= events[i].excerpt %></p>
											<p class="bodycopyb card-text text-center"><a href="/<%= events[i]._id %>">See More</a></p>
										</div>
									</div>
								<% } %>
							</div>
						</div>
					<% }} %>
					</div>

					
				
				
				<a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				</a>
				<a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				</a>
			</div>
		</div>
	</div>
</div>